<div class="userSession">
  <div class="rolSession">Rol: {{userRol}}</div>  
  <div class="nameSession">User: {{userFirst}}</div>  
</div>

<div class="logout">
  <a href="/api/session/logout">Logout</a>
</div>

<div class="second">
  <a href="/carts/{{{idCart}}}">Cart</a>
</div>

{{#if booleanAdmin}}
  <h1 class="title">Admin Products List</h1>
{{else}}
  <h1 class="title">Products List</h1>

{{/if}}

<div class="prod">
  <div class="prodContainer">
  {{#if booleanStatus}}
    {{#each payload}}
      <div class="prodCard">
        <div class="prodTitle">{{this.title}}</div>
        <div class="prodDescription">{{this.description}}</div>
        <div class="prodImgContainer">
          <img class="prodImg" src="{{this.thumbnail}}" alt="Card image cap">
        </div>
        <div class="prodPrice">${{this.price}}</div>
        <div class="prodCode">Code: {{this.code}}</div>
        <div class="prodStock">Stock: {{this.stock}}</div>
        <button class="btn" onclick="addProductCart('{{_id}}')">Add to cart</button>
      </div>
    {{/each}}
  </div>
    <div class="paginate">
      {{#if hasPrevPage}}
          <a href={{prevLink}}> &lt; Prev </a>
      {{/if}}
      {{#if hasNextPage}}
          <a href={{nextLink}}>Next &gt;</a>
      {{/if}}
    </div>
  {{else}}
    <div>
        <h2>No hay productos disponibles</h2>
    </div>
  {{/if}}
</div>
