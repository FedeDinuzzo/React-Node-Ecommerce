<h1 class="text-center">Update Form Products</h1> 
<form id="addProductForm" class="ProductForm">
    <p class="text-center">Enter product data:</p>
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" id="title" placeholder="Iphone">
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" class="form-control" id="description" placeholder="14 Pro Max">
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" class="form-control" id="price" placeholder="1500">
    </div>
    <div class="form-group">
        <label for="code">Code:</label>
        <input type="text" class="form-control" id="code" placeholder="number">
    </div>
    <div class="form-group">
        <label for="stock">Stock:</label>
        <input type="number" class="form-control" id="stock" placeholder="40">
    </div>
    <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" class="form-control" id="category" placeholder="phone">
    </div>
    <div class="form-group">
        <label for="thumbnail">Image:</label>
        <input type="text" class="form-control" id="thumbnail" placeholder="img/iphone.jpg">
    </div>
    <div>
        <button type="submit" class="btn btn-primary" id="addProduct">Add Products</button>
    </div>
</form>
<div id="deleteProductForm" class="ProductForm">
    <p>Product to delete</p>
    <div class="form-group">
        <label for="idDelete">Product ID:</label>
        <input type="text" class="form-control" id="idDelete" />
    </div>
    <button type="submit" class="btn btn-danger" onclick="deleteProduct()">Delete</button>
</div>
<h2 class="text-center">Real Time Products List:</h2>
<div id="realTimeProducts" class="realTimeProducts">
    {{#each products}}
        <div id="productsFromServer"></div>
    {{/each}}
</div>

